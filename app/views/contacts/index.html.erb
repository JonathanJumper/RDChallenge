<div class="title">
  <h3><%= t('contacts') %> </h3>
  <span>
    <%= link_to t('new')+" "+t('contact'), new_contact_path, class: "btn btn-outline-success"  %>
  </span>
</div>

<div class="contacts">
  <% @contacts.each do |contact| %>
      <%= link_to contact do %>
          <div class="card">

            <div class="card-body">

                <div class="mb-2"> <i class="fa fa-user-circle-o fa-fw"></i> <%= contact.name %> </div>
                <div class="mb-2"> <i class="fa fa-briefcase fa-fw"></i> <%= contact.job %> </div>
                <% if contact.gender? %>
                  <i class="fa fa-mars fa-fw"></i> <%= contact.age %> <%= t('age') %>
                <% else %>
                  <i class="fa fa-venus fa-fw"></i> <%= contact.age %>  <%= t('age') %>
                <% end %>

            </div>

            <div class="card-footer">
              <i class="fa fa-globe fa-fw mr-2"></i> <%= contact.city.name %>, <%= contact.city.country %>
            </div>

          </div>
      <% end %>
  <% end %>
</div>
